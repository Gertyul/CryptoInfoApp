<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="WindowBackgroundColor">#FF2D2D30</Color>
    <Color x:Key="TextColor">White</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{DynamicResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}" />

    <SolidColorBrush x:Key="ToggleBtnBorder" Color="#af4425"/>
    <SolidColorBrush x:Key="ToggleBtnText" Color="#af4425"/>
    <SolidColorBrush x:Key="ToggleBtnCheckedBg" Color="#af4425"/>
    <SolidColorBrush x:Key="ToggleBtnCheckedText" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ToggleBtnHover" Color="#334CC2FF"/>

    <SolidColorBrush x:Key="ButtonBackground" Color="#af4425"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="ButtonHover" Color="#662e1c"/>
</ResourceDictionary>