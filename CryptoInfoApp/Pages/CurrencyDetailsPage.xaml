<Page x:Class="CryptoInfoApp.Pages.CurrencyDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:CryptoInfoApp.ViewModels"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Title="Деталі криптовалюти">
    <Page.DataContext>
        <vm:CurrencyDetailsViewModel />
    </Page.DataContext>
    <ScrollViewer Margin="10">
        <StackPanel >
            <TextBlock Text="{Binding CurrencyDetails.Name}" 
                       FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <Image Source="{Binding CurrencyDetails.Image}" 
                   Width="64" Height="64" Margin="0,0,0,10"/>
            <TextBlock Text="Ціна:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CurrencyDetails.CurrentPrice, StringFormat=C}" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Обсяг торгів:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CurrencyDetails.TotalVolume}" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Зміна за 24 години:" FontWeight="Bold"/>
            
            <TextBlock Text="{Binding CurrencyDetails.PriceChangePercentage24h, StringFormat={}{0:F2}%}" 
                       Margin="0,0,0,10"/>

            <!-- Секція з графіком -->
            <TextBlock Text="Графік ціни за останні 24 години" 
                       FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>
            <lvc:CartesianChart Series="{Binding ChartSeries}" Height="300">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Labels="{Binding ChartLabels}" />
                </lvc:CartesianChart.AxisX>
                <!-- Можна додати AxisY за потребою -->
            </lvc:CartesianChart>

            <Button Content="Відкрити на сайті" 
                    Click="OpenInBrowser_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
