<Page x:Class="CryptoInfoApp.Pages.CurrencyDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:CryptoInfoApp.ViewModels"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:loc="clr-namespace:CryptoInfoApp.Localization"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      Title="{loc:Loc Key=CurrencyDetailsTitle}">
    <Page.DataContext>
        <vm:CurrencyDetailsViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="5,5,5,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="{Binding CurrencyDetails.Image}" Width="50" Height="50" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrencyDetails.Name}" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrencyDetails.Symbol}" FontSize="14" Opacity="0.6"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{loc:Loc Key=PriceLabel}" FontSize="12" Opacity="0.6" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrencyDetails.CurrentPrice, Converter={StaticResource FixedCurrencyConverter}}" 
                               FontSize="28" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="24h Change" FontSize="12" Opacity="0.6" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding CurrencyDetails.PriceChangePercentage24h, StringFormat={}{0:F2}%}" 
                               FontSize="20" FontWeight="Bold" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <RadioButton Content="24h" Command="{Binding ChangePeriodCommand}" CommandParameter="1" 
                     IsChecked="True" Style="{StaticResource ToggleButtonStyle}"/>
                        <RadioButton Content="7d" Command="{Binding ChangePeriodCommand}" CommandParameter="7" 
                     Style="{StaticResource ToggleButtonStyle}"/>
                        <RadioButton Content="30d" Command="{Binding ChangePeriodCommand}" CommandParameter="30" 
                     Style="{StaticResource ToggleButtonStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Loc Key=CandlestickToggleLabel}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <CheckBox IsChecked="{Binding IsCandlestickChart, Mode=TwoWay}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <lvc:CartesianChart Grid.Row="1" Series="{Binding ChartSeries}">
                    <lvc:CartesianChart.DataTooltip>
                        <lvc:DefaultTooltip Foreground="Black"/>
                    </lvc:CartesianChart.DataTooltip>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding ChartLabels}" />
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </Grid>
        </Border>

    </Grid>
</Page>